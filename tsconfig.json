{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "lib": ["dom", "es2017", "DOM.Iterable"],
    "esModuleInterop": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types", "types/**/*"],
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": ["src", "types"],
  "exclude": ["node_modules/*"]
}
